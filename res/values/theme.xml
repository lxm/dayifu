<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NewCustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/NewActionBar</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:actionBarTabTextStyle">@style/NewActionBarTitleText</item>
        <item name="android:actionBarTabStyle">@style/NewActionBarTabs</item>
        <item name="android:actionBarTabBarStyle">@style/NewActionBarTabBars</item>
        <item name="android:actionMenuTextColor">@android:color/holo_green_light</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="NewActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:titleTextStyle">@style/NewActionBarTitleText</item>
        <item name="android:backgroundStacked">@android:color/holo_green_dark</item>
    </style>

    <!-- ActionBar title text -->
    <style name="NewActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#21AE63</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="NewActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="NewActionBarTabs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>

    <style name="NewActionBarTabBars" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
    </style>

</resources>